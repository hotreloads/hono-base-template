{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base", "prettier", "airbnb-typescript"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "./tsconfig.json"
	},

	"rules": {
		"react/jsx-filename-extension": "off",
		"@typescript-eslint/quotes": ["error", "double"],
		"@typescript-eslint/indent": "off",
		"@typescript-eslint/comma-dangle": "off"
	}
}
